{
  "name": "taio",
  "version": "0.1.0",
  "description": "Typescript All In One",
  "main": "build/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project ./tsconfig.production.json",
    "clean": "node ./dev-build/scripts/clean.js",
    "compile": "tsc",
    "dev": "yarn watch",
    "format": "prettier --write .",
    "lint": "yarn lint:style && yarn lint:types",
    "lint:style": "prettier --check .",
    "lint:types": "tsc --noEmit",
    "reset": "yarn && yarn clean --git && yarn",
    "test": "jest",
    "update": "node ./dev-build/scripts/update-packages.js",
    "watch": "tsc -w",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format"
    }
  }
}
